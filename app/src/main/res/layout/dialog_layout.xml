<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:backgroundTint="#E0DCD9"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m35"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="8dp"
            android:hint="结束时间(输入小时整数)"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/edit_begin" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="0dp"
            android:layout_height="@dimen/m40"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置定时时间:"
            android:textColor="#673AB7"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="40dp"
            tools:layout_conversion_absoluteWidth="280dp" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m20"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="请输入开始时间:"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tip"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="108dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m20"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="请输入结束时间:"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="108dp" />

        <Button
            android:id="@+id/bt_clean"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m40"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="取消"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bt_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m40"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="确定"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/edit_begin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m35"
            android:layout_marginStart="120dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:hint="开始时间(输入小时整数)"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>