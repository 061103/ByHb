<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/dingshikaiqi"
        app:layout_constraintStart_toEndOf="@+id/lightsleep"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <EditText
        android:id="@+id/lightsleep"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint=">0ms"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/finshsleep" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/finshsleep"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/clickredsleep"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <EditText
        android:id="@+id/findredsleep"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint=">10ms"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/shoudongqiangbao" />

    <EditText
        android:id="@+id/finshsleep"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint=">1500ms"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/clickredsleep" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="@dimen/m33"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="@string/readme"
        android:textColor="#673AB7"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dingshikaiqi" />

    <Button
        android:id="@+id/serverstatus"
        android:layout_width="0dp"
        android:layout_height="@dimen/m34"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/clickredsleep"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint=">10ms"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/findredsleep" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="5dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/zidonghuifu"
        app:layout_constraintStart_toEndOf="@+id/findredsleep"
        app:layout_constraintTop_toBottomOf="@+id/shoudongqiangbao" />

    <Button
        android:id="@+id/zidonghuifu"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:text="@string/xiping"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverstatus" />

    <ListView
        android:id="@+id/hongbaolistview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:divider="#2D222121"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/biyong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/biyongredpacket"
        android:textAllCaps="false"
        android:textColor="#673AB7"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="发现红包延时ms点击："
        android:textColor="#242323"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biyong" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="拆红包延时ms点击："
        android:textColor="#242323"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="领取等待延时ms点击："
        android:textColor="#242323"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="亮屏查询等待延时ms："
        android:textColor="#242323"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:text="获取的红包类型及数量:"
        android:textColor="#00BCD4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="优先领取"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zidonghuifu" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="清零币种"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/shoudongqiangbao"
        android:layout_width="0dp"
        android:layout_height="@dimen/m34"
        android:layout_marginTop="4dp"
        android:text="自动模式"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toStartOf="@+id/serverstatus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dingshikaiqi"
        android:layout_width="0dp"
        android:layout_height="@dimen/m32"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="定时回复"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/screen_on"
        android:layout_width="0dp"
        android:layout_height="@dimen/m33"
        android:layout_marginTop="3dp"
        android:text="屏幕常亮"
        android:textColor="#242323"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/hongbaolistview"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/button2" />


</android.support.constraint.ConstraintLayout>