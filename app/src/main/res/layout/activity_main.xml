<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/lightsleep"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <EditText
        android:id="@+id/lightsleep"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint=">200ms"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/finshsleep" />

    <Button
        android:id="@+id/button5"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/finshsleep"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/clickredsleep"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <EditText
        android:id="@+id/findredsleep"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint=">100ms"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/biyong" />

    <EditText
        android:id="@+id/finshsleep"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:hint=">1200ms"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/clickredsleep" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textColor="#242323"
        android:text="领取等待延时："
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="亮屏等待延时："
        android:textColor="#242323"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/biyong"
        android:layout_width="211dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:text="@string/biyongredpacket"
        android:textColor="#9C27B0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="@string/readme"
        android:textColor="#673AB7"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/serverstatus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/serverstatus"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/biyong"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#242323"
        android:text="发现红包延时："
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biyong" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textColor="#242323"
        android:text="拆红包延时："
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/clickredsleep"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint=">100ms"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/findredsleep" />

    <Button
        android:id="@+id/button3"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="确定"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/findredsleep"
        app:layout_constraintTop_toBottomOf="@+id/serverstatus" />

    <Button
        android:id="@+id/bt_xiping"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="@string/xiping"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ListView
        android:id="@+id/hongbaolistview"
        android:layout_width="403dp"
        android:layout_height="443dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fastScrollEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:dividerHeight="1dp"
        android:divider="#2D222121"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="188dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="当日获取红包类型及数量:"
        android:textColor="#242323"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/hongbaolistview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="添加币种"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/bt_xiping" />

    <Button
        android:id="@+id/button7"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="删除币种"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/shoudongqiangbao"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="自动模式"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <TextView
        android:id="@+id/gettime"
        android:layout_width="203dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hongbaolistview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>